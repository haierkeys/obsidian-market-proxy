{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "importHelpers": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "isolatedModules": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7",
      "ESNext"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "target": "ES6",
     "jsx": "react-jsx"
  },
  "include": [
    "**/*.ts"
  ]
}